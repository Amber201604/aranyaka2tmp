/* miniprogram/pages/profile/profile.wxss */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: rgb(255, 255, 255);
}
.swiperMain {
  position:relative;
  height:100%;
  z-index: 0;
}
swiper{
  width:100%;
  height:100%;
  position:fixed;
}
.slide-image{
  width:100%;
  height:100%;
  background-repeat:no-repeat;
  background-position: center top;
  background-size:cover;
}
.avator{
  display: flex;
  margin-top:80rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx
}
.all{
  position: relative;
  height: 100%;
  border: 40rpx solid rgba(255, 255, 255, 0);
  color:#5D5EA8;
}
.divLine{
 background: #EBBB1B;
 margin-top: 20rpx;
 margin-bottom: 20rpx;
 width: 100%;
 height: 5rpx;
}
.uploader{
  background-color: rgba(255, 255, 255, 0.281);
  margin-bottom: 30rpx;
}
.uploader-text{
  width: 80%;
  border-radius: 10rpx;
  color:#5D5EA8;
}
.level{
  display: flex;
  flex-direction: column;
}
.label{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 30rpx;
}

.submitt{
  width: 80%;
  border-radius: 10rpx;
  margin-top: 40rpx;
  background-color: rgba(255, 255, 255, 0.199);
  color:#5D5EA8;
}