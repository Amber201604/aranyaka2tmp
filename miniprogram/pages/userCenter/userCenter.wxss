.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-bottom: 80rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.container{
  position:relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: center;
  align-items: center;
  color:#5D5EA8;
}
.all{
  width:90%;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.divLine{
  background: #EBBB1B;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;
  height: 5rpx;
}
.avator{
  display: flex;
  margin-top:80rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx
}

.out-edit{
  width:90%;
  display:flex;
  justify-content: center;
  text-align: center;
}
.edit{
  width: 40%;
  border-radius: 5%;
  display:flex;
}
.bottt{
  font-size: 20rpx;
  border: 3rpx solid #888;
  background-color: #007bff3b;
  border-radius: 10%;
  box-shadow:0px 1px 1px 1px #222;
  color:#5D5EA8;
}
.like-container{
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.like1{
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.like2{
  display: flex;
  flex-direction: row;
}
.headline{
  width: 35%;
  height:40%;
  font-size: 30rpx;
  border: 3rpx solid #888;
  background-color: #007bff3b;
  border-radius: 10%;
  box-shadow:0px 1px 1px 1px #222;
  color:#5D5EA8;
}
.divLine4{
 background: #EBBB1B;
 margin-top: 10rpx;
 margin-bottom: 10rpx;
 width:100%;
 height: 5rpx;
}
.join-in{
  width: 80%;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  text-align: center;
  color:#5D5EA8;
}
.okbtn{ 
	width:100%; 
	text-align: center;
	background-color: transparent;   /*按钮透明*/  
	border:none;				/*设置按钮边框*/
  font-size: 32rpx;
  margin-top: -20rpx;
  margin-bottom: -20rpx;
  font-weight: 450;
  color:#5D5EA8;
}
.okbtn::after{
	border:none;
}
.swiperMain {
  position:relative;
  height:100%;
  z-index: 0;
}
swiper{
  width:100%;
  height:100%;
  position:fixed;
}
.slide-image{
  width:100%;
  height:100%;
  background-repeat:no-repeat;
  background-position: center top;
  background-size:cover;
}
.red-img{
  position: absolute;
  top:10rpx;
  left: 175rpx;
  width: 17rpx;
  height: 17rpx;
